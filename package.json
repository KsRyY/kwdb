{
  "name": "root",
  "private": true,
  "devDependencies": {
    "eslint-config-prettier": "6.10.1",
    "eslint-config-rem": "4.0.0",
    "eslint-plugin-prettier": "3.1.2",
    "husky": "4.2.5",
    "lint-staged": "10.1.3",
    "prettier": "1.19.1",
    "xo": "0.29.1"
  },
  "workspaces": [
    "kwdb",
    "kwdb-cli"
  ],
  "xo": {
    "extends": [
      "rem",
      "plugin:prettier/recommended"
    ]
  },
  "lint-staged": {
    "*.{js}": [
      "xo --fix"
    ],
    "*.{md, json}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
